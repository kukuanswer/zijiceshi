<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp" >

        <RelativeLayout
            android:id="@+id/programe_icon_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/programe_icon"
                android:layout_width="40dp"
                android:layout_height="@dimen/program_item_height"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_program_default" />

            <ImageView
                android:id="@+id/programe_lock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/programe_icon"
                android:layout_alignBottom="@id/programe_icon"
                android:layout_margin="2dp"
                android:background="@drawable/ic_lock" />
        </RelativeLayout>

        <TextView
            android:id="@+id/programe_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/programe_icon_layout"
            android:text="CCTV-1"
            android:textColor="@color/text_color_white"
            android:textSize="15sp" />
    </RelativeLayout>

</RelativeLayout>